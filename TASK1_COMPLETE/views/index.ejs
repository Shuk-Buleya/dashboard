              </div>
                
            </div>
          </div>
        
          <!-- projects section starts here  -->
          <div class="content"  id="projects">
            <h1>Projects</h1>
            <div id="pro">
              Projects content goes here
            </div>
          </div>
        
          <!-- calendar section starts from here   -->      
          <div class="content" id="calendar">
              <h1>Calendar</h1>
            <div id="cal">
              <iframe src="./src/main/resources/static/index.html" frameborder="0" scrolling = "no"></iframe>
            </div>
          </div>
        
          <!-- documents section starts form here    -->        
          <div class="content" id="documents">
            <h1>Documents</h1>
            <div id="doc">
