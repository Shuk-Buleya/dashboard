<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/charthead") %>
</head>
<body>
    <header>
        <h1>Bar Chart</h1>
    </header>
    <main>
        <!-- chart will be created here -->
        <section class="chart-container">
            <h2>Bar Chart</h2>
            <p class="chart-description">A Bar Chart.</p>
            <canvas id="barChart"></canvas>
        </section>
    </main>
    <div class="back-home">
        <button class="back-home"><a href="/">Go back</a></button>
    </div>
    
    <script>
        let xLine = [
          "<%= data[0].fruit %>",
          "<%= data[1].fruit %>",
          "<%= data[2].fruit %>",
          "<%= data[3].fruit %>",
          "<%= data[4].fruit %>",
          "<%= data[5].fruit %>",
          "<%= data[6].fruit %>",
        ];

    let yLine = [
        "<%= data[0].amount %>",
        "<%= data[1].amount %>",
        "<%= data[2].amount %>",
        "<%= data[3].amount %>",
        "<%= data[4].amount %>",
        "<%= data[5].amount %>",
        "<%= data[6].amount %>",
    ];

    new Chart('barChart', {
            type: 'bar',
            data: {
                labels: xLine,
                datasets: [{
                    label: 'Fruit Amount',
                    data: yLine,
                    backgroundColor: ['skyblue', 'orange', 'pink', 'yellow', 'green', 'black', 'red'],
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>
